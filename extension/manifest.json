{
	"manifest_version": 2,

	"name": "SpotBot",
	"description": "Midterm implementation",
	"version": "0",

	"background": {
		"scripts": [
			"background/jquery-3.2.1.min.js",
			"background/background.js"
		]
	},

	"content_scripts": [
		{
			"js": [
				"content/jquery-3.2.1.min.js",
				"content/content.js"
			],
			"matches": [
				"http://twitter.com/*",
				"https://twitter.com/*"
			],
			"run_at": "document_end"
		},
		{
			"css": [
				"content/content.css"
			],
			"matches": [
				"http://twitter.com/*",
				"https://twitter.com/*"
			],
			"run_at": "document_end"
		}
	],

	"icons": { 
		"16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png" 
    },

	"permissions": [
		"tabs",
		"activeTab",
		"http://twitter.com/*",
		"https://twitter.com/*"
	],

	"page_action": {
		"default_icon": {                    
			"16": "icons/icon16.png",
	        "48": "icons/icon48.png",
	        "128": "icons/icon128.png" 
		}
    }
}